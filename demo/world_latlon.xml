<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map>
<Map srs="+init=epsg:4326">

    <Style name="polygon_style">
        <Rule>
            <PolygonSymbolizer/>
        </Rule>
    </Style>

    <Style name="point_style">
        <Rule>
            <PointSymbolizer/>
        </Rule>
    </Style>


    <Layer name="polygon_layer" srs="+init=epsg:4326">
        <StyleName>polygon_style</StyleName>
        <Datasource>
            <Parameter name="type">shape</Parameter>
            <Parameter name="file">data/world_latlon.shp</Parameter>
        </Datasource>
    </Layer>
    <Layer name="point_layer" srs="+init=epsg:4326">
        <StyleName>point_style</StyleName>
        <Datasource>
            <Parameter name="type">shape</Parameter>
            <Parameter name="file">data/ne_10m_airports.shp</Parameter>
        </Datasource>
    </Layer>
</Map>